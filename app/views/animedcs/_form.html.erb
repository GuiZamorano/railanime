<%= form_with(model: animedc) do |form| %>
  <% if animedc.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(animedc.errors.count, "error") %> prohibited this animedc from being saved:</h2>

      <ul>
        <% animedc.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.text_field :anime_name, class:"form-control", placeholder:"Anime Name" %>
  </div>

  <div class="field form-group">
    <%= form.text_field :authour, class:"form-control", placeholder:"Author Name" %>
  </div>

  <div class="field form-group">
    <%= form.label :watched, style: "display: block" %>
    <%= form.check_box :watched, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :rating, style: "display: block" %>
    <%= form.number_field :rating, class:"form-control" %>
  </div>
  <div class="field form-group">
    <% form.label :user_id, style: "display: block" %>
    <%= form.number_field :user_id, id: :animedc_user_id, class:"form-control", value: current_user.id, type: :hidden %>
  </div>

  <div class="actions">

    <% if @animedc.id.present? %>
  <%= form.submit "Update Anime" , class:"btn btn-secondary"%>
<% else %>
  <%= form.submit "Add Anime" , class:"btn btn-secondary"%>
<% end %>
  </div>
<% end %>
